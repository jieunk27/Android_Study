<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
            android:id="@+id/wonjang_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:background="#9430ab"
            android:text="안녕"
            android:textSize="32sp" />

    <TextView
            android:id="@+id/smartapp_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="#a2ab30"
            android:text="수원스마트앱개발학원"
            android:textSize="16sp" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/smartapp_text"
            android:background="#8b9189"
            android:text="왼쪽"
            android:textSize="32sp" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/smartapp_text"
            android:background="#8b9189"
            android:text="오른쪽"
            android:textSize="32sp" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@id/wonjang_text"
            android:background="#8b9189"
            android:text="오른쪽"
            android:textSize="32sp" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/wonjang_text"
            android:background="#8b9189"
            android:text="위쪽"
            android:textSize="32sp" />

    <TextView
            android:id="@+id/hello_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:background="#38cd0f"
            android:text="Hello"
            android:textSize="32sp" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/hello_text"
            android:layout_alignParentEnd="true"
            android:background="#8b9189"
            android:text="위"
            android:textSize="32sp" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@id/hello_text"
            android:background="#8b9189"
            android:text="왼쪽"
            android:textSize="32sp" />

</RelativeLayout>